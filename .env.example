# Shared secrets / integration keys
WEATHER_API_KEY=replace_with_weather_provider_key
WEATHER_API_BASE_URL=https://api.openweathermap.org
WEATHER_SOURCE_MODE=openai
MAPBOX_TOKEN=replace_with_mapbox_token
GOOGLE_MAPS_API_KEY=replace_with_google_maps_key
GOOGLE_ROUTES_API_URL=https://routes.googleapis.com
# Optional override origin (nearby-probe mode works without this)
GOOGLE_TRAFFIC_ORIGIN_LAT=
GOOGLE_TRAFFIC_ORIGIN_LNG=
GOOGLE_TRAFFIC_CACHE_TTL_SECONDS=600

# Infrastructure
DATABASE_URL=postgresql://tirpe:tirpepassword@localhost:5432/tirpe
REDIS_URL=redis://localhost:6379
AI_SERVICE_URL=http://localhost:8000
AI_PROVIDER=openai
OPENAI_API_KEY=replace_with_openai_api_key
OPENAI_MODEL=gpt-4.1-mini
OPENAI_BASE_URL=
OPENAI_MAX_OUTPUT_TOKENS=600
OPENAI_REQUEST_TIMEOUT_MS=3500

# API and frontend connectivity
CORS_ORIGIN=http://localhost:5173
VITE_API_URL=http://localhost:4000/api
VITE_MAPBOX_TOKEN=replace_with_mapbox_token
VITE_FEEDBACK_BACKEND=auto

# Feature Flags
FEATURE_CHATBOT_ENABLED=true
FEATURE_DISASTER_ALERT_MODE=false
FEATURE_SCAM_HOTSPOT_SIM=false
CHAT_MEMORY_MAX_TURNS=12
AUTH_TOKEN_SECRET=replace_with_long_random_secret
AUTH_TOKEN_TTL_HOURS=24
API_KEY_PREFIX=tirpe_live
ADMIN_USERNAMES=admin
